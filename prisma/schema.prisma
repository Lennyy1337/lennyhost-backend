generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model key {
  key String @unique
  type KeyRoles
}

model user {
  id          String   @unique @default(uuid())
  password    String
  username    String
  email       String   @unique
  role        Role     @default(REGULAR)
  uploads     upload[]
}

model upload {
  id       String @unique @default(uuid())
  mimetype String
  fileKey  String @unique
  fileName String
  user     user   @relation(fields: [userId], references: [id])
  userId   String
}

enum KeyRoles {
  STAFF
  PREMIUM
}
enum Role {
  OWNER
  STAFF
  PREMIUM
  REGULAR
}
